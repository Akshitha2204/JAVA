//Check even or odd
import java.io.*;
import java.util.Scanner;
public class OE
{
        public static void main(String args[])
        {
                Scanner obj = new Scanner(System.in);
                System.out.print("enter a number  : ");
                int n = obj.nextInt();
                if(n %2 == 0)
                {
                        System.out.println("Number is even ");
                }
                else
                {
                        System.out.println("Number is odd ");
                }
        }
}
