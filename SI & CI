//Simple and compund interst
import java.io.*;
import java.util.Scanner;
import java.lang.Math;
public class In
{
        public static void main(String args[])
{
        Scanner obj = new Scanner(System.in);
        System.out.print("Enter P : ");
        float P = obj.nextFloat();
        System.out.print("Enter R : ");

        float R = obj.nextFloat();
        System.out.print("Enter T : ");

        float T = obj.nextFloat();
        System.out.print("Enter n : ");

        float n = obj.nextFloat();
        float SI = (P*R*T)/100;
        float C = P*(1+(R/100*n));
        float a = n*T;
        double CI = Math.pow(C,a);
        System.out.println("Simple Interst = "+SI);
        System.out.println("COmpund Interst ="+CI);
}
}
